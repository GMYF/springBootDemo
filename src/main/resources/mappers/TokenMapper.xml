<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.light.springboot.mappers.TokenMapper">
  <resultMap id="BaseResultMap" type="UserToken">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="token" jdbcType="CHAR" property="token" />
    <result column="createDate" jdbcType="TIMESTAMP" property="createDate" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from token
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="UserToken">
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into token (user_id, token, createDate
      )
    values (#{userId,jdbcType=INTEGER}, #{token,jdbcType=CHAR}, #{createDate,jdbcType=TIMESTAMP}
      )
  </insert>
  <update id="updateByPrimaryKey" parameterType="UserToken">
    update token
    set user_id = #{userId,jdbcType=INTEGER},
      token = #{token,jdbcType=CHAR},
      createDate = #{createDate,jdbcType=TIMESTAMP}
    where id = #{id,jdbcType=INTEGER}
  </update>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select id, user_id, token, createDate
    from token
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, user_id, token, createDate
    from token
  </select>


  <sql id="selectToken">
        token,user_id,createDate
    </sql>
  <!--获取token-->
  <select id="getToken" parameterType="com.light.springboot.domain.user.User"
          resultType="com.light.springboot.domain.user.UserToken">
    select
    <include refid="selectToken"/>
    from token
    <where>
      where 1=1
      <if test="userId>0">
        and userId = #{userId}
      </if>
    </where>
  </select>
  <select id="getUserByToken" parameterType="String" resultType="com.light.springboot.domain.user.UserToken">
    SELECT
    <include refid="selectToken"/>
    FROM token where token=#{token}
  </select>

</mapper>